@model Projeto22025.Models.Produto

@{
    ViewData["Title"] = "Deletar";
}

<h1>@ViewData["Title"]</h1>
<h3 class="text-danger">Você tem certeza que quer deletar este item?</h3>

<div class="card shadow-sm">
    <div class="card-header">
        <h4 class="mb-0">Produto</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                Imagem
            </dt>
            <dd class="col-sm-10 mb-3">
                @if (!string.IsNullOrEmpty(Model.ImagemUrl))
                {
                    <img src="@Model.ImagemUrl" alt="Imagem do produto" style="width:150px; height:auto; border-radius: 8px;" />
                }
                else
                {
                    <img src="~/imagens/placeholder.png" alt="Sem imagem" style="width:150px; height:auto; border-radius: 8px;" />
                }
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>

            <!-- INÍCIO DA MUDANÇA -->
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Preco)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Preco)
            </dd>
            <!-- FIM DA MUDANÇA -->

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EstoqueAtual)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EstoqueAtual)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Categoria)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Categoria.Nome)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Deletar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        </form>
    </div>
</div>