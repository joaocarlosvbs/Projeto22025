@model Projeto22025.Models.Produto

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <!-- MUDANÇA 1: Adicionar 'enctype' para permitir upload de arquivos -->
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EstoqueAtual" class="control-label"></label>
                <input asp-for="EstoqueAtual" class="form-control" />
                <span asp-validation-for="EstoqueAtual" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CategoriaId" class="control-label"></label>
                <!-- Verifique se o ViewData["CategoriaId"] está sendo preenchido no seu GET do Create no Controller -->
                <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
            </div>

            <!--
                MUDANÇA 2: Deletamos o campo de texto 'ImagemUrl'
                e adicionamos o campo de 'ImagemUpload' do tipo 'file'.
            -->
            <div class="form-group mb-3">
                <label asp-for="ImagemUpload" class="control-label"></label>
                <input asp-for="ImagemUpload" class="form-control" type="file" />
                <span asp-validation-for="ImagemUpload" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}