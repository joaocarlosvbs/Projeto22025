@model IEnumerable<Projeto22025.Models.Produto>

@{
    ViewData["Title"] = "Estoque de Produtos";
}

<h1>Estoque de Produtos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar Novo Produto</a>
</p>
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <!-- INÍCIO DA MUDANÇA: Adicionamos uma coluna para a Imagem -->
            <th>
                Imagem
            </th>
            <!-- FIM DA MUDANÇA -->
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstoqueAtual)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <!-- INÍCIO DA MUDANÇA: Mostramos a imagem ou um placeholder -->
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagemUrl))
                    {
                        <!--
                            Opcional: Para "clicar e aparecer na tela" (abrir em nova aba)
                            Envolvemos a imagem em um link <a>
                        -->
                        <a href="@item.ImagemUrl" target="_blank">
                            <img src="@item.ImagemUrl" alt="Imagem do produto" style="width:75px; height:75px; object-fit: cover; border-radius: 5px;" />
                        </a>
                    }
                    else
                    {
                        <!-- Você pode baixar uma imagem "placeholder.png" e salvar em wwwroot/imagens -->
                        <img src="~/imagens/placeholder.png" alt="Sem imagem" style="width:75px; height:75px; object-fit: cover; border-radius: 5px;" />
                    }
                </td>
                <!-- FIM DA MUDANÇA -->
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstoqueAtual)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>